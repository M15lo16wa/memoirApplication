# Configuration Frontend - Variables d'environnement
# Copiez ce fichier vers .env.local et ajustez les valeurs selon votre environnement

# URLs des serveurs
REACT_APP_MAIN_SERVER=http://localhost:3000
REACT_APP_API_URL=http://localhost:3000/api
REACT_APP_WEBRTC_SERVER=https://localhost:3443
REACT_APP_WEBRTC_API_URL=https://localhost:3443/api

# URLs frontend
REACT_APP_FRONTEND_URL=http://localhost:3001
# REACT_APP_WEBRTC_FRONTEND_URL n'est plus nécessaire - utilise REACT_APP_FRONTEND_URL

# Configuration WebRTC
REACT_APP_WEBRTC_STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302
REACT_APP_WEBRTC_TURN_SERVERS=
REACT_APP_WEBRTC_ICE_TIMEOUT=5000

# Configuration de développement
REACT_APP_DEV_MODE=true
REACT_APP_SSL_VERIFY=false
REACT_APP_DEBUG_MODE=true

# Configuration HTTPS pour React (OBLIGATOIRE pour WebRTC)
HTTPS=true
SSL_CRT_FILE=./certs/server.crt
SSL_KEY_FILE=./certs/server.key

# Alternative : utiliser le port 3443 pour l'interface React
# REACT_APP_FRONTEND_URL=https://localhost:3443
